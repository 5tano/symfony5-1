{% extends 'base.html.twig' %}

{% block title %}Question: {{ question }}{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="my-4">Question</h2>
            <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                <div class="q-container p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="/images/tisha.png" width="100" height="100">
                        </div>
                        <div class="col">
                            <h1 class="q-title-show">{{ question }}</h1>
                            <div class="q-display p-3">
                                <i class="fa fa-quote-left mr-3"></i>
                                <p class="d-inline">I've been turned into a cat, any thoughts on how to turn back? While I'm adorable, I don't really care for cat food.</p>
                                <p class="pt-4"><strong>--Tisha</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h2 class="my-4">Answers {{ answers|length }}</h2>
    

    <ul class="list-unstyled">
        {% for answer in answers %}
            <li>
                <div class="row">
                    <div class="col">
                        <img src="/images/tisha.png" width="50" height="50">
                    </div>
                    <div class="col">
                        {{ answer }}
                    </div>
                    <div class="col">
                        <div class="mt-3 vote-arrows">
                            <a class="vote-up" href="#"><i class="far fa-arrow-alt-up"></i></a>
                            <a class="vote-down" href="#"><i class="far fa-arrow-alt-down"></i></a>
                        </div>
                    </div>
                </div>
                
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
